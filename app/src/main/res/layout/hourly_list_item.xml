<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                tools:background="#ffaa00">

    <TextView
        android:id="@+id/hourly_time_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:text="10:00"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/hourly_icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hourly_time_label"
        android:layout_toEndOf="@+id/hourly_time_label"
        android:src="@drawable/partly_cloudy"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/hourly_temperature_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:text="100"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/hourly_summary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/hourly_icon_imageview"
        android:layout_toLeftOf="@+id/hourly_temperature_label"
        android:layout_toRightOf="@+id/hourly_icon_imageview"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        tools:text="cloudy"/>

</RelativeLayout>